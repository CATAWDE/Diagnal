<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_20"
        android:background="@color/white">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/titilliumLight"
            android:textColor="@color/black"
            android:text="@string/exit_app"
            android:textSize="@dimen/sp_20"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
        </androidx.appcompat.widget.AppCompatTextView>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/subTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/titilliumLight"
            android:textColor="@color/black"
            android:text="@string/exit_msg"
            android:layout_marginTop="@dimen/dp_20"
            android:textSize="@dimen/sp_20"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title">
        </androidx.appcompat.widget.AppCompatTextView>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/ysBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/titilliumLight"
            android:text="@string/yes_text"
            android:textColor="@color/black"
            android:background="@drawable/yllow_background_border"
            android:layout_marginEnd="@dimen/dp_20"
            app:layout_constraintTop_toTopOf="@+id/noButton"
            app:layout_constraintEnd_toStartOf="@+id/noButton"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/noButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/titilliumLight"
            android:text="@string/no_text"
            android:textColor="@color/black"
            android:background="@drawable/yllow_background_border"
            android:layout_marginTop="@dimen/dp_20"
            app:layout_constraintTop_toBottomOf="@+id/subTitle"
            app:layout_constraintEnd_toEndOf="parent"
            />



    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>